                               IconBackgroundColor="SlateGray" Grid.Row="0"/>

        <Button 
                    Text="Add Product"
                    x:Name="btnAddRecord" Clicked="btnAddRecord_Clicked" 
                    BorderWidth="1" 
                    BorderColor="#153462" 
                    BackgroundColor="#FBF2CF" 
                    BorderRadius="8"
                    TextColor="Black"
                    ImageSource="icon_add.png"
                    Grid.Row="1" 
                    Padding="10" HorizontalOptions="Center" VerticalOptions="Center"/>

